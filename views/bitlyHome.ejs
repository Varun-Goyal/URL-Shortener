    	<div id="page-wrapper">

            <div class="container-fluid">
    	
    
		    <div class="container">
			
				<div class="row">
				
					<div class="col-lg-6 col-md-7 col-sm-9">
			
					  <h4 style="border-bottom: 1px solid #c5c5c5;">
					    Do You Have A Long URL?
					  </h4>
					  
					  <div style="padding: 20px;" id="form-olvidado">
			  		
			  			<form accept-charset="UTF-8" role="form" id="login-form">
			  			
			    			<fieldset ng-disabled="disableProfile">
				      		
								<div class="form-group input-group">
						        	<strong>Input URL </strong><input class="form-control" placeholder="Long URL Starting with www" name="current_weight" type="text" autofocus="" ng-model="longUrl">
						        </div>
						        
						        <br>
						        
						        <div class="form-group input-group">
						        
						        	<button class="btn btn-primary btn-block" ng-click="shortUrl()">Shorten URL</button>
						        	
						        </div>
						        
						        <br>
						        
						        <strong>Shortened URL is:</strong> {{status}}
						        
						    </fieldset>
			      		
			    			</form>
			    		
			  			</div>
			  
			 		</div>
			  		
			  	</div>
			
