	<script>
  
  	<!-- Controller for Food Log -->
  	
  	var bodyProfile = angular.module('bodyProfileAngular', []);
	bodyProfile.controller('bodyProfileController', bodyProfileOperations); 
			
	function bodyProfileOperations($scope) {
  		
  		$scope.shortUrl = function(){
  		
  			var longUrl = "http://awseb-e-3-AWSEBLoa-EKSFQME2PGO3-419917081.us-west-2.elb.amazonaws.com:80/" + $scope.longUrl;
  		
  			var xhttp = new XMLHttpRequest();
  			xhttp.onreadystatechange = function() {
  			
	    		if (xhttp.readyState == 4 && xhttp.status == 200) {
	      			$scope.status = xhttp.responseText;
	    		}
  			};
  			xhttp.open("GET", longUrl, false);
  			xhttp.send();
  		}
  		
  	}
  	
	</script>
	
	
	
